// Mixins
fullWidth() {
  width: 100%;
  height: 100%;
}


noSelect() {
  user-select: none;
  pointer-events: none;
}

centerItem() {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.centerItem {
  display: flex;
  centerItem();
}
// General Styles
::selection {
  color: white;
  background-color: accent;
}

html, body {
  margin: 0;
  padding: 0;
}

html, body {
  fullWidth();
}

.col {
  flex-direction: column;
}

html {
  font-size: 10px;
}

h1 {
  font-family: 'Libre Baskerville', serif;
  font-size: 1.6rem;
}

body {
  font-family: 'Montserrat', sans-serif;
  font-weight: 300;
  font-size: 1.2rem;
  margin: auto;
  color: rgba(0,0,0,.75);
  line-height: 1.5;
}

#logo {
  display: flex;
  margin: 2rem auto;
}

nav {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  margin: 2rem auto;
  background-color: #343434;
  font-size: 1.1rem;
  font-weight: 400;
  color: #fff;

    a {
      flex: 1;
      margin: auto;
      text-transform: uppercase;
      text-align: center;
      white-space: nowrap;
      padding: 0 1rem;
      height: 3rem;
      line-height: 3rem;
    }
}

.content {
  display: flex;
  width: 50%;
  margin: auto;

  .half {
    display: flex;
    flex-direction: column;
    width: 50%;

    &:first-of-type {
      margin-right: 5%;
    }
  }
}

button {
  display: flex;
  font-family: 'Montserrat', sans-serif;
  font-weight: 500;
  font-size: 1.4rem;
  -webkit-appearance: none;
  border: 0;
  background-color: #eb1b19;
  text-transform: uppercase;
  white-space: nowrap;
  color: #fff;

  &:hover img {
    animation: pokeRight 1s infinite;
  }

  span {
    display: flex;
    margin: auto 1rem;
  }

  img {
    margin: auto;
    margin-left: 1rem;
  }

}

@keyframes pokeRight {
  0% {
    transform: translateX(0);
  }
  20% {
    transform: translateX(25%);
  }
  40% {
    transform: translateX(0%);
  }
  80% {
    transform: translateX(25%);
  }
  100% {
    transform: translateX(0%);
  }
}

.actions {
  display: flex;
  width: 100%;
  height: 4rem;
  margin-bottom: 2rem;

  .price {
    font-size: 1.8rem;
    font-weight: 400;
    line-height: 4rem;
    text-align: center;
  }

  input {
    text-align: center;
    flex: 0;
  }

  .price, input, button {
    flex: 1;
    margin-right: 1rem;
  }
}

.sections {
  border: 1px solid #000;
  border-left: 0;
  border-right: 0;

  .section {
    display: flex;
    flex-direction: column;
    border-bottom: 1px solid rgba(0,0,0,.25);

    &:last-child {
      border: 0;
    }

    label {
      cursor: pointer;
      user-select: none;
      font-size: 1.6rem;
      font-weight: 400;
      text-transform: uppercase;
      height: 4rem;
      line-height: 4rem;
      padding-left: 3rem;
      position: relative;

      &:before {
        content: "";
        position: absolute;
        left: 1rem;
        top: 50%;
        transition: .25s transform ease;
        transform: translateY(-50%);
        background: url("../assets/arrow.svg") no-repeat;
        width: 7px;
        height: 14px;
      }
    }

    ul, p {
      margin: 0;
      padding-bottom: 1rem;
    }

    .container {
      transition: max-height 1s linear;
      height: 0;
      overflow: hidden;
      margin-left: 3rem;
    }
  }
}

.productImage {
  cursor: pointer;
}



footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 3rem;
  border-top: 1px solid rgba(0,0,0,.25);
  background-color: rgba(0,0,0,.1);
}

// Hide Actual Input Checkbox
input[type=checkbox] {
  display: none;
}

// Open next container based on section title clicked
#checkA:checked ~ .container, #checkB:checked ~ .container, #checkC:checked ~ .container {
  height: initial;
}

// Rotate arrow via CSS transform based on section clicked
#checkA:checked ~ label:before, #checkB:checked ~ label:before, #checkC:checked ~ label:before {
  transform: translateY(-50%) rotateZ(90deg);
}
