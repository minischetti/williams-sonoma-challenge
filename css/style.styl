// Variables
accent=#1a8cff
black05=rgba(0,0,0,.05)
black10=rgba(0,0,0,.10)
black25=rgba(0,0,0,.25)
vendors=official

// Mixins
fullWidth() {
  width: 100%;
  height: 100%;
}

// General Styles
::selection {
  color: white;
  background-color: accent;
}

html, body {
  margin: 0;
  padding: 0;
}

html, body {
  fullWidth();
}

.col {
  flex-direction: column;
}

html {
  font-size: 10px;
}

h1 {
  font-family: 'Libre Baskerville', serif;
  font-size: 1.6rem;
}

body {
  font-family: 'Montserrat', sans-serif;
  font-weight: 400;
  font-size: 1.2rem;
  margin: auto;
  line-height: 1.5;
  overflow-x: hidden;
}

p, li {
  color: rgba(0,0,0,.75);
  font-weight: 300;
}

#logo {
  display: flex;
  margin: 2rem auto;
}

nav {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  margin: 2rem auto 0;
  background-color: #343434;
  font-size: 1.1rem;
  color: #fff;

  a {
    flex: 1;
    margin: auto;
    text-transform: uppercase;
    text-align: center;
    white-space: nowrap;
    padding: 0 1rem;
    height: 3rem;
    line-height: 3rem;

    &:last-child {
      background-color: #293659;
    }
  }
}

// Burger Icon
.burger-container {
  position: absolute;
  top: 2rem;
  left: 2rem;
  width: 4rem;
  height: 4rem;
  display: flex;
  visibility: hidden;
  z-index: 3;
}

#burger {
  position: relative;
  width: 1.4rem;
  height: 1.4rem;
  margin: auto;
  overflow: hidden;

  span {
    position: absolute;
    left: 0;
    width: 100%;
    height: .1rem;
    background-color: #000;
    border-radius: .2rem;
    transition: .25s ease;

    &:nth-child(1) {
      top: 0;
      transition-delay: .25s;
    }

    &:nth-child(2) {
      top: .6rem;
    }

    &:nth-child(3) {
      top: 1.2rem;
      transition-delay: .25s;
    }
  }
}

#burger.active {
  span {
    &:nth-child(1) {
      top: .6rem;
      transform: rotate(45deg);
    }

    &:nth-child(2) {
      transform: translateX(100%);
    }

    &:nth-child(3) {
      top: .6rem;
      transform: rotate(-45deg);
    }
  }
}


.content {
  display: flex;
  width: 50%;
  margin: auto;

  .half {
    display: flex;
    flex-direction: column;
    width: 50%;

    &:first-of-type {
      margin-right: 5%;
    }
  }
}

button {
  cursor: pointer;
  outline: 0;
  display: flex;
  font-family: 'Montserrat', sans-serif;
  font-weight: 500;
  font-size: 1.4rem;
  -webkit-appearance: none;
  border: 0;
  background-color: #eb1b19;
  text-transform: uppercase;
  white-space: nowrap;
  color: #fff;
  height: 4rem;

  &:hover img {
    animation: pokeRight 1s infinite;
  }

  span {
    display: flex;
    margin: auto 1rem;
  }

  img {
    margin: auto;
    margin-left: 1rem;
  }

}

@keyframes pokeRight {
  0% {
    transform: translateX(0);
  }
  20% {
    transform: translateX(25%);
  }
  40% {
    transform: translateX(0%);
  }
  80% {
    transform: translateX(25%);
  }
  100% {
    transform: translateX(0%);
  }
}

.actions {
  display: flex;
  width: 100%;
  height: 4rem;
  margin-bottom: 2rem;

  .price {
    font-size: 1.8rem;
    line-height: 4rem;
    text-align: center;
  }

  input {
    text-align: center;
    flex: 0;
    margin: 0;
    box-sizing: border-box;
    border: 0;
    border-radius: 0;
    outline: 0;
    background-color: rgba(0,0,0,.15);
  }

  // Remove Default Chrome and Firefox Number Input Controls
  input::-webkit-inner-spin-button, input::-webkit-outer-spin-button {
     -webkit-appearance: none;
      margin: 0;
  }

  input[type=number] {
      -moz-appearance: textfield;
  }

  .productQuantity {
    display: flex;
    height: 4rem;

    span {
      cursor: pointer;
      user-select: none;
      display: flex;
      width: 4rem;
      background-color: rgba(0,0,0,.15);

      &:first-of-type:hover img {
        animation: 1s pokeDown ease infinite;
      }

      &:last-of-type:hover img {
        animation: 1s pokeUp ease infinite;
      }

      img {
        transform: rotateZ(90deg);
      }

      &:last-of-type img {
        transform: rotateZ(-90deg);
      }

      img {
        margin: auto;
      }
    }
  }

  .price, input, button {
    flex: 1;
  }
  .price, .productQuantity span:last-of-type {
    margin-right: 1rem;
  }
}

@keyframes pokeDown {
  0% {
    transform: rotateZ(90deg) translateX(0);
  }
  20% {
    transform: rotateZ(90deg) translateX(25%);
  }
  40% {
    transform: rotateZ(90deg) translateX(0%);
  }
  80% {
    transform: rotateZ(90deg) translateX(25%);
  }
  100% {
    transform: rotateZ(90deg) translateX(0%);
  }
}

@keyframes pokeUp {
  0% {
    transform: rotateZ(-90deg) translateX(0);
  }
  20% {
    transform: rotateZ(-90deg) translateX(25%);
  }
  40% {
    transform: rotateZ(-90deg) translateX(0);
  }
  80% {
    transform: rotateZ(-90deg) translateX(25%);
  }
  100% {
    transform: rotateZ(-90deg) translateX(0);
  }
}

.breadcrumbs {
  margin: 2rem;

  a:not(:last-child) {
    color: rgba(0,0,0,.5);
  }
}

.sections {
  border: 1px solid #000;
  border-left: 0;
  border-right: 0;

  .section {
    display: flex;
    flex-direction: column;
    border-bottom: 1px solid rgba(0,0,0,.25);

    &:last-child {
      border: 0;
    }

    label {
      cursor: pointer;
      user-select: none;
      font-size: 1.6rem;
      text-transform: uppercase;
      height: 4rem;
      line-height: 4rem;
      padding-left: 3rem;
      position: relative;

      &:before {
        content: "";
        position: absolute;
        left: 1rem;
        top: 50%;
        transition: .25s transform ease;
        transform: translateY(-50%);
        background: url("../assets/arrow.svg") no-repeat;
        width: 7px;
        height: 14px;
      }
    }

    ul, p {
      margin: 0;
      padding-bottom: 1rem;
    }

    .container {
      transition: max-height 1s linear;
      height: 0;
      overflow: hidden;
      margin-left: 3rem;
    }
  }
}

#imageContainer {
  margin: 0 auto auto;
}

.productImage {
  cursor: pointer;
  width: 25%;
}

#productFaded {
  position: absolute;
  height: 100%;
  left: 50%;
  transform: translateX(-50%);
  z-index: -1;
  opacity: .25;
}

footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 3rem;
  border-top: 1px solid rgba(0,0,0,.25);
  background-color: rgba(0,0,0,.1);
}

// Hide Actual Input Checkbox
input[type=checkbox] {
  display: none;
}

// Open next container based on section title clicked
#checkA:checked ~ .container, #checkB:checked ~ .container, #checkC:checked ~ .container {
  height: initial;
}

// Rotate arrow via CSS transform based on section clicked
#checkA:checked ~ label:before, #checkB:checked ~ label:before, #checkC:checked ~ label:before {
  transform: translateY(-50%) rotateZ(90deg);
}

#heroImage {
  width: 100%;
}

#dim {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0,0,0,.75);
  opacity: 0;
  visibility: hidden;
  transition: .5s all ease;

  &.active {
    opacity: 1;
    visibility: visible;
  }
}

#cart {
  display: flex;
  position: absolute;
  top: 0;
  left: 50%;
  opacity: 0;
  visibility: hidden;
  transform: translate(-50%,-50%);
  width: 50%;
  height: 50%;
  background-color: white;
  transition: .5s all ease;


  &.active {
    top: 50%;
    opacity: 1;
    visibility: visible;
  }

  .wrap, .wrap button {
    margin: auto;
  }

  .backButton {
    cursor: pointer;
    display: flex;
    position: absolute;
    top: 0;
    left: 1rem;
    height: 4rem;
    line-height: 4rem;

    img {
      display: block;
      margin: auto 1rem;
      transform: rotateZ(180deg);
    }
  }
}

@media (max-width: 768px) {

  .breadcrumbs {
    display: none;
  }

  nav {
    position: absolute;
    left: -100%;
    width: 100%;
    height: 100vh;
    top: 0;
    margin: 0;
    flex-direction: column;
    transition: .5s all ease;
    z-index: 2;
    background-color: #fff;
    padding-top: 8rem

    a {
      display: flex;
      justify-content: center;
      align-items: center;
      flex: 1;
      width: 100%;
      padding: 0;
      height: initial;
      color: #000;
    }

    &.active {
      left: 0;
    }
  }

  #cart {
    width: 100%;
    height: 100%;
  }

  .burger-container {
    visibility: visible;
  }

  #logo {
    height: 4rem;
  }

  .content {
    width: 90%;
    flex-direction: column;

    .half {
      width: 100%;
    }

    #heroImage {
      width: 50%;
      height: auto;
      margin: auto;
    }

    h1 {
      text-align: center;
      margin: 2rem 0;
    }

    .description {
      display: none;
    }

    .actions {
      flex-direction: column;
      height: initial;
    }

    .price, .productQuantity input, .productQuantity span, button {
      height: 4rem;
      margin: 0 !important;
    }

    button {
      margin-top: 1rem !important;
      margin-bottom: 0;

      span {
        margin: auto;
      }
    }
  }
}
@media (max-width: 1440px) {
  .content {
    width: 90%;
  }
}
