// Variables
accent=#1a8cff
black05=rgba(0,0,0,.05)
black10=rgba(0,0,0,.10)
black25=rgba(0,0,0,.25)
white05=rgba(255,255,255,.05)
white10=rgba(255,255,255,.1)
white25=rgba(255,255,255,.25)
white50=rgba(255,255,255,.5)
transitionTiming=cubic-bezier(0.68, -0.55, 0.265, 1.55)
vendors=official
skew=skewX(-10deg)

// Fonts
@font-face {
  font-family: 'Proxima Nova Regular';
  src: url('../fonts/ProximaNova-Regular.woff') format('woff');
  src: url('../fonts/ProximaNova-Regular.woff2') format('woff2');
}
@font-face {
  font-family: 'Proxima Nova Bold';
  src: url('../fonts/ProximaNova-Bold.woff') format('woff');
  src: url('../fonts/ProximaNova-Bold.woff2') format('woff2');
}
@font-face {
  font-family: 'Proxima Nova Semibold';
  src: url('../fonts/ProximaNova-Semibold.woff') format('woff');
  src: url('../fonts/ProximaNova-Semibold.woff2') format('woff2');
}
@font-face {
  font-family: 'Proxima Nova Light';
  src: url('../fonts/ProximaNova-Light.woff') format('woff');
  src: url('../fonts/ProximaNova-Light.woff2') format('woff2');
}
@font-face {
  font-family: 'Proxima Nova Thin';
  src: url('../fonts/ProximaNova-Thin.woff') format('woff');
  src: url('../fonts/ProximaNova-Thin.woff2') format('woff2');
}

// Mixins
fullWidth() {
  width: 100%;
  height: 100%;
}


noSelect() {
  user-select: none;
  pointer-events: none;
}

centerItem() {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.centerItem {
  display: flex;
  centerItem();
}
// General Styles
::selection {
  color: white;
  background-color: accent;
}

html, body {
  margin: 0;
  padding: 0;
}

html, body {
  fullWidth();
}

.col {
  flex-direction: column;
}

html {
  font-size: 10px;
}

h1 {
  font-family: 'Libre Baskerville', serif;
  font-size: 1.6rem;
}

body {
  font-family: 'Montserrat', sans-serif;
  font-weight: 300;
  font-size: 1.2rem;
  margin: auto;
  color: rgba(0,0,0,.75);
  line-height: 1.5;
}

#logo {
  display: flex;
  margin: 2rem auto;
}

nav {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  margin: 2rem auto;
  background-color: #343434;
  font-size: 1.1rem;
  font-weight: 400;
  color: #fff;

    a {
      flex: 1;
      margin: auto;
      text-transform: uppercase;
      text-align: center;
      white-space: nowrap;
      padding: 0 1rem;
      height: 3rem;
      line-height: 3rem;
    }
}

.content {
  display: flex;
  width: 50%;
  margin: auto;

  .half {
    display: flex;
    flex-direction: column;
    width: 50%;
  }
}


button {
  font-family: 'Montserrat', sans-serif;
  font-weight: 500;
  -webkit-appearance: none;
  border: 0;
  background-color: #eb1b19;
  padding: 0 2.4rem;
  color: #fff;

  text-transform: uppercase;
}

.actions {
  display: flex;
  width: 100%;
  height: 4rem;
  margin-bottom: 2rem;

  span {
    font-size: 1.8rem;
    font-weight: 400;
    line-height: 4rem;
    text-align: center;
  }

  input {
    text-align: center;
  }

  span, input, button {
    flex: 1;
    margin-right: 1rem;
  }
}

.sections {
  border: 1px solid #000;
  border-left: 0;
  border-right: 0;

  .section {
    display: flex;
    flex-direction: column;
    border-bottom: 1px solid rgba(0,0,0,.25);

    &:last-child {
      border: 0;
    }

    span {
      font-size: 1.6rem;
      font-weight: 400;
      text-transform: uppercase;
      padding: 1rem 0;
      img {
        padding: 0 1rem;
      }
    }

    p {
      margin: 0;
    }

    .container {
      overflow: hidden;

      &.collapsed {
        height: 0;
      }
    }
  }
}
footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 3rem;
  border-top: 1px solid rgba(0,0,0,.25);
  background-color: rgba(0,0,0,.1);
}
