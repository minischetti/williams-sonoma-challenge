// Variables
accent=#1a8cff
black05=rgba(0,0,0,.05)
black10=rgba(0,0,0,.10)
black25=rgba(0,0,0,.25)
white05=rgba(255,255,255,.05)
white10=rgba(255,255,255,.1)
white25=rgba(255,255,255,.25)
white50=rgba(255,255,255,.5)
transitionTiming=cubic-bezier(0.68, -0.55, 0.265, 1.55)
vendors=official
skew=skewX(-10deg)

// Fonts
